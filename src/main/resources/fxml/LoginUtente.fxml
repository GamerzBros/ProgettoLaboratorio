<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane prefHeight="305.0" prefWidth="480.0" style="-fx-background-color: #1a73e8;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cittadini.LoginUtente">
   <children>
      <Button layoutX="0.0" layoutY="7.5" onMouseClicked="#goBackToMain" styleClass="bottomShadow" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="22.0" fitWidth="25.0" preserveRatio="false">
               <Image url="@/common/goBackIcon.png" />
            </ImageView>
         </graphic>
      </Button>
      <TextField fx:id="txt_userLogin" layoutX="100.0" layoutY="130.0" prefHeight="25.0" prefWidth="280.0" promptText="Email" style="-fx-stroke: 1; -fx-border-style: hidden hidden solid hidden; -fx-border-color: #C4C4C4; -fx-background-color: transparent; -fx-text-fill: white;" />
      <PasswordField fx:id="pswd_login" layoutX="100.0" layoutY="175.0" prefHeight="25.0" prefWidth="280.0" promptText="Password" style="-fx-stroke: 1; -fx-border-style: hidden hidden solid hidden; -fx-border-color: #C4C4C4; -fx-background-color: transparent; -fx-text-fill: white;" />
      <Button fx:id="login_button" layoutX="125.0" layoutY="232.5" mnemonicParsing="false" onAction="#loggaCittadini" prefHeight="25.0" prefWidth="105.0" style="-fx-background-radius: 20px; -fx-background-color: white;" text="Login">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Button fx:id="register_button" layoutX="250.0" layoutY="232.5" mnemonicParsing="false" onAction="#loadRegisterCitizenUI" prefHeight="25.0" prefWidth="105.0" style="-fx-background-radius: 20px; -fx-background-color: white;" text="Registrati">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ImageView fitHeight="75.0" fitWidth="75.0" layoutX="208.0" layoutY="38.0" pickOnBounds="true" preserveRatio="false">
         <Image url="@/cittadini/account.png" />
      </ImageView>
   </children>
   <stylesheets>
      <URL value="@/style/style.css"/>
   </stylesheets>
</AnchorPane>
